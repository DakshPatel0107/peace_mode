<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/textColorSecondary"/>
            <stroke
                android:width="4dp"
                android:color="@color/textColorSecondary"/> <!-- Change to your desired color -->
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/textColorSecondary"/> <!-- Change to your desired color -->
        </shape>
    </item>
</layer-list>
